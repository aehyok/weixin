.aside{
	width:100%;
	border-right: 1px solid #ddd;
	font-size: 0.85rem;
}
.type-nav{
	position: relative;
	padding:.7rem .3rem;
	text-align: center;
	border: 1px solid #ddd;
	z-index: 10;
	width:350rpx;
}
.type-nav.selected{
	margin-right: -1px;
	padding-left:-1px;
	border-bottom:1px solid #3f5497; 
	background-color: #fff;
	color: #3f5497;
}
.content{
	background-color: #fff;
}

.dish{
	margin-left: 1rem;
	padding: 1rem;
	border-bottom: 1px solid #ddd;
}
.dish .title{
	display: block;
	font-size: 1rem;
}
.dish p{
	color: orange;
	font-size: .75rem;
}
.dish .add-btn{
	width: 3rem;
	text-align: right;
}

.cart{
	display: block;
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
	padding: 1rem;
	background: #ddd;
}

.flex-wrap{
	display: flex;
}
.flex-item{
	flex: 1;
}
.flex-direction-col{
	flex-direction: column;
}
.flex-direction-row{
	flex-direction: row;
}



.start{
  position:fixed;
  top:0px;
  left:0px;
  z-index:1000000000000000;
  width:100%;
  height:100%;
}
.menu{
  position:fixed;
  top:0px;
  width:100%;
  height:32px;
  background:#f6f5f3;
  z-index:10000000
}
.scroll-view_H{
    white-space: nowrap;
    margin-right:10px;
    width: 97%;
}
.add_menu{
  float:right;
}
.add_menu image{
  width:50px;
  height:30px;
  position:fixed;
  right: 0px;
  top:0px;
}
.slide-image{
  width:100%;
}
.logo{
  width:70px;
  height:24px;
  margin-top: 8px;
  margin-left:25px;
}
.header{
  width:100%;
  height: 40px;
  background: #3080c0;
  position:fixed;
  top:0px;
  z-index:10000000;
}
.search_input{
  width:60%;
  height:27px;
  background: #ffffff;
  float: right;
  margin-top:7px;
  margin-right:25px;
  border-radius: 5px;
  font-size: 10px;
  text-indent: 10px;
  padding-left:10px;
}
.nav_font{
  font-size:13px;
  line-height: 32px;
  margin-left:20px;
  display: inherit;
}
.nav_hover{
  font-size: 16px;
  color:#3080c0;
}
.news_content{
    margin: 0 auto;
    width:95%;
    height:72px;
    border-bottom:1px solid #ddd;
    clear:both;
}
.news_content_left{
    width:79%;
    float: left;
}
.news_content_left_top{
    height:auto;
}
.news_content_left_but{
    font-size: 12px;
    margin-left: 3px;
}

.news_content_left_but1{
    font-size: 10px;
    line-height: 22px;
}

.news_content_left_but .pic{
   width: 17px;
   height: 17px;
   border-radius: 17px;
   margin-right: 5px;
}
.news_content_left_top .text_top{
    padding: 3px;
    font-size:12px;
    line-height: 22px;
    color:blue;
}
.news_content_right{
  width:20%;
  height:72px;
  float: right;
}
.news_content_right image{
  width:36px;
  height: 36px;
  margin: 18px;
}
.news_content-left{
  float: left;
}
.news_content-right{
  float: right;
}
